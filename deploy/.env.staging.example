# Staging environment configuration
# Copy to .env in your staging deploy directory

# Environment name (used for container naming: lehrerlog-staging-server, lehrerlog-staging-db)
ENV_NAME=staging

IMAGE_NAME=ghcr.io/your-username/lehrerlog-server
IMAGE_TAG=staging

# Staging runs on port 18081 (different from production)
HOST_PORT=18081

# PostgreSQL settings - separate database from production
POSTGRES_DB=lehrerlog_staging
POSTGRES_USER=lehrerlog
POSTGRES_PASSWORD=staging-password-here

# Staging storage paths (completely separate from production!)
DATA_DIR=/var/lib/lehrerlog/staging/data
DB_DATA_DIR=/var/lib/lehrerlog/staging/pgdata
